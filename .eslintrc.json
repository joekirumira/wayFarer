{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2015
    },
    "rules": {
        "no-unused-vars": [1,{ "argsIgnorePattern": "res|next|^err" }],
        "arrow-body-style": [2, "as-needed"],
        "no-param-reassign": [2, { "props": false}],
        "no-console": 0,
        "import": 0,
        "func-names": 0,
        "space-before-function-paren": 0,
        "comma-dangle": 0,
        "max-len": 0,
        "no-underscore-dangle": 0,
        "consistent-return": 0,
        "no-tabs": 0,
        "indent": ["error", "tab"],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": 0,
        "semi": [
            "error",
            "always"
        ]
    }
}